<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="90dp"
    android:orientation="horizontal"
    android:padding="10dp">

    <!-- TextView for the first letter of the sender's name -->
    <TextView
        android:id="@+id/textViewSenderImage"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_marginEnd="10dp"
        android:gravity="center"
        android:background="@drawable/circle_background"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:visibility="gone" /> <!-- Initially hidden -->

    <!-- Container for Sender Name, Message Content, and Message Time -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/textViewSenderName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sender Name"
            android:textStyle="bold"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/textViewMessageContent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Message Content"
            android:textSize="14sp"
            android:textColor="#666" />

        <TextView
            android:id="@+id/textViewMessageTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Time"
            android:textSize="12sp"
            android:textColor="#999" />
    </LinearLayout>

    <!-- Action button for reply (if needed) -->
<!--    <ImageButton-->
<!--        android:id="@+id/buttonReply"-->
<!--        android:layout_width="40dp"-->
<!--        android:layout_height="40dp"-->
<!--        android:src="@drawable/ic_call"-->
<!--        android:background="?attr/selectableItemBackgroundBorderless"-->
<!--        android:contentDescription="Reply Button" />-->

</LinearLayout>
