<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/dark_gray"
    android:padding="0dp">

    <!-- Top Bar -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:background="@color/black">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal"
        android:background="@color/primary_blue"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/imageViewBack"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_call"
            android:layout_marginStart="16dp"
            android:contentDescription="Back" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="IN YOUR CONTACTS"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="14sp" />

        <ImageView
            android:id="@+id/imageViewHeart"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_call"
            android:layout_marginEnd="16dp"
            android:contentDescription="Favorite" />
    </LinearLayout>

    <!-- Profile Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/dark_gray"
        android:padding="16dp"
        android:gravity="center_horizontal">


        <TextView
            android:id="@+id/textViewLetter"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginBottom="10dp"
            android:gravity="center"
            android:background="@drawable/circle_background"
            android:textColor="#FFFFFF"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/textViewName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Husband"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:layout_marginTop="8dp" />

        <TextView
            android:id="@+id/textViewLastSeen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Last seen 14:16"
            android:textSize="14sp"
            android:textColor="@color/green"
            android:layout_marginTop="4dp" />
    </LinearLayout>

    <!-- Action Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp"
        android:gravity="center_horizontal"
        android:weightSum="5"
        android:background="@color/black">

        <ImageView
            android:id="@+id/buttonCall"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_call"
            android:layout_weight="1"
            android:contentDescription="Call"
            app:tint="@color/blue" />

        <ImageView
            android:id="@+id/buttonMessage"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_call"
            android:layout_weight="1"
            android:contentDescription="Message"
            app:tint="@color/blue" />

        <ImageView
            android:id="@+id/buttonVoice"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_call"
            android:layout_weight="1"
            android:contentDescription="Voice"
            app:tint="@color/blue" />

        <ImageView
            android:id="@+id/buttonEdit"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:src="@drawable/ic_call"
            android:contentDescription="Edit"
            app:tint="@color/blue" />

        <ImageView
            android:id="@+id/buttonPay"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:src="@drawable/ic_call"
            android:contentDescription="Pay"
            app:tint="@color/blue" />
    </LinearLayout>

    <!-- Contact Information Section -->


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/rounded_background"
                android:padding="16dp"
                android:layout_marginBottom="8dp">

                <TextView
                    android:id="@+id/textViewNumber"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="085476 15310"
                    android:textSize="18sp"
                    android:textColor="@color/white"
                    android:textStyle="bold" />


                <TextView
                    android:id="@+id/textViewEmail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:textColor="@color/gray_light"
                    android:layout_marginTop="4dp" />
            </LinearLayout>



            <TextView
                android:id="@+id/textViewMoreInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="More info available"
                android:textSize="16sp"
                android:textColor="@color/blue"
                android:layout_marginTop="8dp" />
        </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="@drawable/rounded_background"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="More info available"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Upgrade to Premium to view"
            android:textColor="@color/gray_light"
            android:textSize="14sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:orientation="horizontal"
            android:padding="16dp"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_telegram"
                android:contentDescription="Telegram Icon" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:text="Telegram"
                android:textColor="@color/white"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:padding="16dp"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_whatsapp"
                android:contentDescription="WhatsApp Icon" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:text="WhatsApp"
                android:textColor="@color/white"
                android:textSize="16sp" />
        </LinearLayout>
    </LinearLayout>

    <!-- Call History -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="@drawable/rounded_background"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Call History"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold" />

        <!-- Call History Rows -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerViewCallHistory"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="5"
            android:layout_marginTop="8dp" />

        <Button
            android:id="@+id/buttonShowMore"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Show More"
            android:backgroundTint="@color/blue"
            android:textColor="@color/white"
            android:background="@drawable/rounded_background"
            android:textSize="16sp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp" />
    </LinearLayout>

    <!-- Block & Report Button -->
    <Button
        android:id="@+id/block_report"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="BLOCK &amp; REPORT"
        android:textColor="@color/white"
        android:background="@drawable/rounded_background"
        android:textSize="16sp" />

    </LinearLayout>
</ScrollView>
